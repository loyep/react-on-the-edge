{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        },
        {
            "src": "./api/index.ts",
            "use": "@vercel/node"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}